<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>

    {{! Page Meta }}
    {{#post}}
        <title>{{@blog.title}}: {{title}}</title>
    {{else}}
        <title>{{meta_title}}</title>
    {{/post}}
    <meta name="description" content="{{meta_description}}" />

    {{! Responsive Meta Tags }}
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    {{! Twitter metadata }}
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="{{meta_title}}">
    <meta name="twitter:description" content="{{meta_description}}">

    {{! Application icons }}
    <link href="/blog/assets/ico/favicon.ico" rel="shortcut icon" type="image/x-icon">

    {{! Styles }}
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400|Roboto+Slab:400,300|Inconsolata' rel='stylesheet' type='text/css'>
    <link href="{{ asset "less/default-style/styles.css"}}" rel="stylesheet" type="text/css" />

    {{ghost_head}}
</head>
<body id="body-top" class="{{body_class}} no-js">
    {{> ajaxspinner }}
    {{> header }}
    <div id="content-wrapper">
        {{{body}}}
    </div>
    {{> footer}}
    {{ghost_foot}}

    {{! Scripts }}
    {{!-- These scripts should be built into main.merge.min.js
    <script src="{{ asset "/js/lib/ajaxify.min.js"}}" type="text/javascript"></script>
    <script src="{{ asset "/js/lib/flowtype.js"}}" type="text/javascript"></script>
    <script src="{{ asset "/js/lib/fastclick.js"}}" type="text/javascript"></script>
    <script src="{{ asset "/js/lib/scrollspy.js"}}" type="text/javascript"></script>
    <script src="{{ asset "/js/lib/jquery.smooth-scroll.js"}}" type="text/javascript"></script>
    <script src="{{ asset "/js/lib/masonry.pkgd.min.js"}}" type="text/javascript"></script>
    <script src="{{ asset "/js/infinitescroll.js"}}" type="text/javascript"></script>
    <script src="{{ asset "/js/main.js"}}" type="text/javascript"></script>
    --}}
    <script src="{{ asset "/js/main.merge.min.js"}}" type="text/javascript"></script>
